{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"types": ["node", "vscode"],
		"allowArbitraryExtensions": true,  // 允许任意扩展名
		"moduleResolution": "node",  // 模块解析策略
		"esModuleInterop": true,  // 允许模块导入时使用.js后缀
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{ "path": "./client" },
		{ "path": "./server" }
	]
}